{
  "compilerOptions": {
    "target": "es2018",
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": ["es7"],
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@app/constants": ["constants.ts"],
    },
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
